<%- include('./partials/alerts') %>
<section class="sub-nav">
    <section class="sub-nav-left">
        <h3>Upcoming Anime</h3>
    </section>

    <section class="sub-nav-right">
        <section class="sub-nav-content">
            <p>Search By Title</p>
            <form action="/anime/search" method="GET">
            <input class="black text-field" type="text" name="name">
            <input class="btn" type="submit" value="Search">
        </form>
        </section>
        <section class="sub-nav-content">
            <p>Search By Season</p>
            <form action="/anime/season" method="GET">
            <select name="year" id="year">
                <option value="2020">2020</option>
                <option value="2021">2021</option>
            </select>
            <select name="season" id="season">
                <option value="winter">Winter</option>
                <option value="spring">Spring</option>
                <option value="summer">Summer</option>
                <option value="fall">Fall</option>
            </select>
            <input type="submit" value="Search">
        </form>
        </section>
    </section>
</section>

<h4 class="list-row-header">MONDAY</h4>
<section class="list-row">
    <% monday.forEach(show => { %>
        <article class="list-row-entry">
            <img src="<%= show.image_url %>" alt="<%= show.title %> art.">
            <p class="title-label"><a href="/anime/<%=show.mal_id %>"><%= show.title %></a></p>
        </article>
    <% }) %>
</section>

