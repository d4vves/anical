<section class="sub-nav">
    <section class="sub-nav-left">
        <h3>Add Character</h3>
    </section>
    <section class="sub-nav-right">
        <p><a href="/profile/edit">back to prompts</a></p>
    </section>
</section>

<section class="list-container">
    <% characters.forEach(character => { %>
        <section class="list-entry">
            <img src="<%= character.image_url %>" alt="<%= character.name %>">
        <h4 class="list-title"><%= character.name %></h4>
        <% if (promptId) { %>
            <form method="POST" action="/character">
                <input hidden type="text" name="name" value="<%= character.name %>">
                <input hidden type="text" name="imageurl" value="<%= character.image_url %>">
                <input hidden type="text" name="promptId" value="<%= promptId %>">
                <input class="btn" type="submit" value="Add character">
            </form>
        <% } else { %>
            <form method="POST" action="/profile/picture?_method=PUT">
                <input hidden type="text" name="imageurl" value="<%= character.image_url %>">
                <input class="btn" type="submit" value="Use Portrait">
            </form>
        <% } %>
        </section>
    <% }) %>
</section>